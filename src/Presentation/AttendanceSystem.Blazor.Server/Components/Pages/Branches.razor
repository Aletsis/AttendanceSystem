@page "/branches"
@using MediatR
@using AttendanceSystem.Application.DTOs
@using AttendanceSystem.Application.Features.Branches.Queries.GetBranches
@using AttendanceSystem.Application.Features.Branches.Commands.CreateBranch
@using AttendanceSystem.Application.Features.Branches.Commands.UpdateBranch
@using AttendanceSystem.Blazor.Server.Services
@using AttendanceSystem.Application.Abstractions
@using Microsoft.JSInterop
@using System.IO

@inject ISender Sender
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject IJSRuntime JS
@inject ReportExportService ExportService

<PageTitle>Sucursales</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true">Sucursales</MudText>
    <MudText Typo="Typo.subtitle1" Class="mb-4">Gestiona las sucursales de la empresa.</MudText>

    <MudTable Items="@_branches" Hover="true" Loading="@_loading" Filter="new Func<BranchDto,bool>(FilterFunc)">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista de Sucursales</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="_searchString" Placeholder="Buscar" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreateDialog" Class="ml-4">Nueva Sucursal</MudButton>
             <MudButton Variant="Variant.Filled" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Upload" OnClick="ImportBranches" Class="ml-2">Importar</MudButton>
             <MudButton Variant="Variant.Filled" Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.Download" OnClick="ExportToExcel" Class="ml-2">Exportar</MudButton>
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Nombre</MudTh>
            <MudTh>Descripci贸n</MudTh>
            <MudTh>Direcci贸n</MudTh>
            <MudTh>Acciones</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Nombre">@context.Name</MudTd>
            <MudTd DataLabel="Descripci贸n">@context.Description</MudTd>
            <MudTd DataLabel="Direcci贸n">@context.Address</MudTd>
            <MudTd DataLabel="Acciones">
                <MudTooltip Text="Editar">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Warning" OnClick="@(() => OpenEditDialog(context))" Size="Size.Small" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudContainer>

@code {
    private IEnumerable<BranchDto> _branches = new List<BranchDto>();
    private bool _loading = true;
    private string _searchString = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadBranches();
    }

    private async Task LoadBranches()
    {
        _loading = true;
        var result = await Sender.Send(new GetBranchesQuery());
        if (result.IsSuccess)
        {
            _branches = result.Value;
        }
        else
        {
            Snackbar.Add($"Error al cargar sucursales: {result.Error}", Severity.Error);
        }
        _loading = false;
    }

    private bool FilterFunc(BranchDto branch)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;
        if (branch.Name.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (branch.Description?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;
        if (branch.Address?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;
        return false;
    }

    private async Task OpenCreateDialog()
    {
        var parameters = new DialogParameters();
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        
        var dialog = await DialogService.ShowAsync<BranchDialog>("Nueva Sucursal", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled && result.Data is CreateBranchCommand command)
        {
             var createResult = await Sender.Send(command);
             if (createResult.IsSuccess)
             {
                 Snackbar.Add("Sucursal creada correctamente", Severity.Success);
                 await LoadBranches();
             }
             else
             {
                 Snackbar.Add($"Error al crear: {createResult.Error}", Severity.Error);
             }
        }
    }

    private async Task OpenEditDialog(BranchDto branch)
    {
        var parameters = new DialogParameters
        {
            { "BranchId", branch.Id },
            { "Name", branch.Name },
            { "Description", branch.Description },
            { "Address", branch.Address }
        };
        
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        
        var dialog = await DialogService.ShowAsync<BranchDialog>("Editar Sucursal", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled && result.Data is UpdateBranchCommand command)
        {
             var updateResult = await Sender.Send(command);
             if (updateResult.IsSuccess)
             {
                 Snackbar.Add("Sucursal actualizada correctamente", Severity.Success);
                 await LoadBranches();
             }
             else
             {
                 Snackbar.Add($"Error al actualizar: {updateResult.Error}", Severity.Error);
             }
        }
    }

    private async Task ExportToExcel()
    {
        try
        {
            var bytes = ExportService.GenerateBranchesExcel(_branches);
            using var stream = new MemoryStream(bytes);
            using var streamRef = new DotNetStreamReference(stream);
            await JS.InvokeVoidAsync("downloadFileFromStream", $"Sucursales_{DateTime.Now:yyyyMMdd}.xlsx", streamRef);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al exportar: {ex.Message}", Severity.Error);
        }
    }

    private async Task ImportBranches()
    {
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<ImportBranchesDialog>("Importar Sucursales", options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadBranches();
        }
    }
}
